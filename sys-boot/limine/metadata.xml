  <use>
    <flag name="uefi32">
      Enable 32-bit UEFI support.
    </flag>
    <flag name="uefi64">
      Enable 64-bit UEFI support.
    </flag>
    <flag name="uefiaa64">
      Enable AArch64 UEFI support.
    </flag>
    <flag name="uefirv64">
      Enable 64-bit RISC-V UEFI support.
    </flag>
